rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null && request.auth.uid == uid;
    }

    match /wallets/{uid} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow update, create: if false; // Only Cloud Functions adjust balances
    }

    match /transactions/{txId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.uid;
      allow create: if request.auth != null && request.auth.token.admin == true;
    }

    match /kyc/{uid} {
      allow read, update: if request.auth != null && request.auth.uid == uid;
      allow read, update: if request.auth != null && request.auth.token.admin == true;
    }

    match /tables/{tableId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    match /gameRounds/{roundId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
